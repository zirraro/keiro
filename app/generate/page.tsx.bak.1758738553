"use client";

import React, { useEffect, useMemo, useState } from "react";

// Imports "safe" shadcn/ui (compat named OU default)
import * as ButtonMod from "@/components/ui/button";
import * as CardMod from "@/components/ui/card";
import * as InputMod from "@/components/ui/input";
import * as TextareaMod from "@/components/ui/textarea";
import * as LabelMod from "@/components/ui/label";
import * as BadgeMod from "@/components/ui/badge";
import * as SeparatorMod from "@/components/ui/separator";
import * as SelectMod from "@/components/ui/select";

const Button = (ButtonMod as any).Button || (ButtonMod as any).default;
const Card = (CardMod as any).Card || (CardMod as any).default;
const CardHeader = (CardMod as any).CardHeader || (CardMod as any).default?.Header || ((p:any)=> <div {...p} />);
const CardTitle = (CardMod as any).CardTitle || (CardMod as any).default?.Title || ((p:any)=> <div className="font-semibold" {...p} />);
const CardContent = (CardMod as any).CardContent || (CardMod as any).default?.Content || ((p:any)=> <div {...p} />);
const CardFooter = (CardMod as any).CardFooter || (CardMod as any).default?.Footer || ((p:any)=> <div {...p} />);
const Input = (InputMod as any).Input || (InputMod as any).default;
const Textarea = (TextareaMod as any).Textarea || (TextareaMod as any).default;
const Label = (LabelMod as any).Label || (LabelMod as any).default;
const Badge = (BadgeMod as any).Badge || (BadgeMod as any).default;
const Separator = (SeparatorMod as any).Separator || (SeparatorMod as any).default || ((p:any)=> <hr className="my-4" />);
const Select = (SelectMod as any).Select || (SelectMod as any).default || ((p:any)=> <select {...p} />);
const SelectTrigger = (SelectMod as any).SelectTrigger || ((p:any)=> <div {...p} />);
const SelectContent = (SelectMod as any).SelectContent || ((p:any)=> <div {...p} />);
const SelectItem = (SelectMod as any).SelectItem || ((p:any)=> <option {...p} />);

type NewsItem = {
  id: string;
  source?: string;
  title: string;
  snippet?: string;
  url?: string;
  published?: string;
  thumbnailUrl?: string | null;
  hot?: boolean;
  score?: number;
};

const TOPICS = [
  { key: "business",   label: "business" },
  { key: "technology", label: "technology" },
  { key: "science",    label: "science" },
  { key: "world",      label: "world" },
  { key: "health",     label: "health" },
  { key: "sports",     label: "sports" },
] as const;

const TIMEFRAMES = [
  { key: "24h", label: "24H" },
  { key: "48h", label: "48H" },
  { key: "72h", label: "72H" },
  { key: "7d",  label: "7J"  },
] as const;

async function apiFetchNews(params: { topic?: string; timeframe?: string; q?: string; limit?: number }) {
  const u = new URL("/api/news", window.location.origin);
  if (params.topic) u.searchParams.set("topic", params.topic);
  if (params.timeframe) u.searchParams.set("timeframe", params.timeframe);
  if (params.q) u.searchParams.set("q", params.q);
  if (params.limit) u.searchParams.set("limit", String(params.limit));
  const res = await fetch(u.toString(), { cache: "no-store" });
  if (!res.ok) throw new Error("API /api/news failed: " + res.status);
  return res.json() as Promise<{ items: NewsItem[]; meta: any }>;
}

export default function GeneratePage() {
  // Filtres actu :
  const [topic, setTopic] = useState<string>("business");
  const [timeframe, setTimeframe] = useState<string>("24h");
  const [query, setQuery] = useState<string>("");

  // News :
  const [items, setItems] = useState<NewsItem[]>([]);
  const [visible, setVisible] = useState<number>(9);
  const [loading, setLoading] = useState<boolean>(false);
  const [err, setErr] = useState<string | null>(null);

  // Right panel (prompt helper)
  const [brand, setBrand] = useState("");
  const [goal, setGoal] = useState("");
  const [tone, setTone] = useState("premium");
  const [colors, setColors] = useState("");
  const [cta, setCta] = useState("");
  const [hashtags, setHashtags] = useState("");
  const [logoName, setLogoName] = useState<string>("");

  const prompt = useMemo(() => {
    const parts = [
      goal && `Objectif: ${goal}`,
      brand && `Marque/Produit: ${brand}`,
      tone && `Style/Tonalité: ${tone}`,
      colors && `Couleurs: ${colors}`,
      cta && `CTA: ${cta}`,
      hashtags && `Hashtags: ${hashtags}`,
      logoName && `Logo: ${logoName} (prévoir zone d’intégration)`,
      "Sortie attendue: visuel social percutant, prêt à poster.",
    ].filter(Boolean);
    return parts.join("\n");
  }, [brand, goal, tone, colors, cta, hashtags, logoName]);

  // Chargement auto quand topic/timeframe change
  useEffect(() => {
    let alive = true;
    (async () => {
      try {
        setLoading(true);
        setErr(null);
        const data = await apiFetchNews({ topic, timeframe, q: "", limit: 40 });
        if (!alive) return;
        setItems(Array.isArray(data.items) ? data.items : []);
        setVisible(9);
      } catch (e: any) {
        if (!alive) return;
        setErr(e?.message ?? "Erreur inconnue");
      } finally {
        if (alive) setLoading(false);
      }
    })();
    return () => { alive = false; };
  }, [topic, timeframe]);

  const shown = useMemo(() => items.slice(0, visible), [items, visible]);

  const copyPrompt = async () => {
    try { await navigator.clipboard.writeText(prompt); alert("✅ Prompt copié"); }
    catch { console.log(prompt); }
  };

  const onLogoFile = (e: React.ChangeEvent<HTMLInputElement>) => {
    const f = e.target.files?.[0];
    setLogoName(f ? f.name : "");
  };

  return (
    <div className="mx-auto max-w-[1280px] px-4 py-6 lg:grid lg:grid-cols-[minmax(0,1fr)_360px] lg:gap-6">
      {/* ====== Colonne gauche : Filtres + Grille d'actus ====== */}
      <div>
        {/* Barre filtres */}
        <div className="mb-4 flex flex-wrap items-center gap-2">
          {/* Catégories à gauche */}
          <div className="flex flex-wrap items-center gap-2">
            {TOPICS.map(t => (
              <Button
                key={t.key}
                variant={t.key === topic ? "default" : "outline"}
                className="rounded-full px-3 py-1 text-sm"
                onClick={() => setTopic(t.key)}
              >
                {t.label}
              </Button>
            ))}
          </div>

          {/* Temporalité au centre/droite */}
          <div className="ml-2 flex items-center gap-1">
            {TIMEFRAMES.map(tf => (
              <Button
                key={tf.key}
                variant={tf.key === timeframe ? "default" : "outline"}
                className="rounded-full px-3 py-1 text-xs"
                onClick={() => setTimeframe(tf.key)}
                title={"Actualités des " + tf.label}
              >
                {tf.label}
              </Button>
            ))}
          </div>

          {/* Recherche à l’extrême droite */}
          <div className="ml-auto flex items-center gap-2">
            <Input
              placeholder="Rechercher une actu…"
              value={query}
              onChange={(e:any)=> setQuery(e.target.value)}
              className="w-[260px]"
            />
            <Button
              onClick={async () => {
                setLoading(true); setErr(null);
                try {
                  const data = await apiFetchNews({ topic, timeframe, q: query, limit: 40 });
                  setItems(Array.isArray(data.items) ? data.items : []);
                  setVisible(9);
                } catch (e:any) {
                  setErr(e?.message ?? "Erreur inconnue");
                } finally { setLoading(false); }
              }}
            >
              Filtrer
            </Button>
          </div>
        </div>

        <Separator />

        {/* Etat / erreurs */}
        {err && (
          <div className="mt-3 rounded-md border border-red-200 bg-red-50 p-3 text-sm text-red-700">
            {err}
          </div>
        )}
        {loading && (
          <div className="mt-4 text-sm text-gray-500">Chargement…</div>
        )}
        {!loading && shown.length === 0 && (
          <div className="mt-4 rounded-md border bg-muted/30 p-4 text-sm text-gray-600">
            Aucune actualité trouvée.
          </div>
        )}

        {/* Grille actus (9 puis +3) */}
        <div className="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-3">
          {shown.map((it) => (
            <Card key={it.id} className="overflow-hidden">
            {/* Aperçu image */}
            {it.thumbnailUrl ? (
              <img
                src={it.thumbnailUrl}
                alt="aperçu"
                className="h-40 w-full object-cover"
                loading="lazy"
              />
            ) : (
              <div className="h-40 w-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center text-[11px] text-gray-500">Aperçu indisponible</div>
            )}
            {/* Aperçu image */}
            {it.thumbnailUrl ? (
              <img
                src={it.thumbnailUrl}
                alt="aperçu"
                className="h-40 w-full object-cover"
                loading="lazy"
              />
            ) : (
              <div className="h-40 w-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center text-[11px] text-gray-500">Aperçu indisponible</div>
            )}
              <CardHeader className="space-y-2 p-4">
                <div className="flex items-center justify-between">
                  <div className="text-xs text-gray-500">{it.source || "Source"}</div>
                  <div className="flex items-center gap-2">
                    {typeof it.score === "number" && (
                      <Badge variant="secondary" className="text-[10px]">{it.score}</Badge>
                    )}
                    {it.hot && <Badge className="bg-red-500 text-[10px] hover:bg-red-600">hot</Badge>}
                  </div>
                </div>
                <div className="line-clamp-3 text-sm font-medium leading-snug">{it.title}</div>
              </CardHeader>
              <CardContent className="p-4 pt-0">
                {it.snippet && (
                  <div className="line-clamp-4 text-[12px] text-gray-600">{it.snippet}</div>
                )}
              </CardContent>
              <CardFooter className="flex items-center justify-between p-4 pt-0">
                <a
                  href={it.url || "#"}
                  target="_blank"
                  rel="noreferrer"
                  className="text-xs text-blue-600 underline underline-offset-2"
                >
                  Voir la source
                </a>
                <Button
                  size="sm"
                  className="px-3 py-1 text-xs"
                  onClick={() => console.log("Utiliser actus:", it.id)}
                >
                  Utiliser cette actu
                </Button>
              </CardFooter>
            </Card>
          ))}
        </div>

        {/* Afficher plus */}
        {!loading && shown.length < items.length && (
          <div className="mt-6 flex justify-center">
            <Button variant="outline" onClick={() => setVisible(v => Math.min(v + 3, items.length))}>
              + Afficher 3 actus de plus
            </Button>
          </div>
        )}
      </div>

      {/* ====== Colonne droite : Logo + Assistant de prompt + 2 boutons ====== */}
      <aside className="mt-6 lg:mt-0">
        <div className="space-y-4">
          <Card>
            <CardHeader className="p-4">
              <CardTitle className="text-sm">Sélectionner un logo</CardTitle>
            </CardHeader>
            <CardContent className="p-4 pt-0">
              <input
                type="file"
                accept="image/*"
                onChange={(e)=> {
                  const f = (e.target as HTMLInputElement).files?.[0];
                  setLogoName(f ? f.name : "");
                }}
                className="block w-full text-xs file:mr-3 file:rounded-md file:border file:bg-white file:px-3 file:py-2 file:text-xs file:hover:bg-gray-50"
              />
              {logoName && <div className="mt-2 text-[11px] text-gray-600">Choisi: {logoName}</div>}
            </CardContent>
          </Card>

          <Card>
            <CardHeader className="p-4">
              <CardTitle className="text-sm">Assistant de prompt</CardTitle>
            </CardHeader>
            <CardContent className="space-y-3 p-4 pt-0">
              <div className="space-y-1.5">
                <Label htmlFor="brand">Marque / Produit</Label>
                <Input id="brand" value={brand} onChange={(e:any)=>setBrand(e.target.value)} placeholder="ex: Keiro / Keiro AI Studio" />
              </div>
              <div className="space-y-1.5">
                <Label htmlFor="goal">Objectif</Label>
                <Textarea id="goal" value={goal} onChange={(e:any)=>setGoal(e.target.value)} placeholder="ex: Annoncer une nouvelle fonctionnalité, attirer des leads…" />
              </div>
              <div className="space-y-1.5">
                <Label>Tonalité / Style</Label>
                <Select value={tone} onChange={(e:any)=>setTone(e.target?.value ?? e)}>
                  <SelectTrigger />
                  <SelectContent>
                    <SelectItem value="premium">Premium / Luxe</SelectItem>
                    <SelectItem value="tech">Tech / Futuriste</SelectItem>
                    <SelectItem value="friendly">Amical / Léger</SelectItem>
                    <SelectItem value="corporate">Corporate</SelectItem>
                    <SelectItem value="sport">Sport / Énergique</SelectItem>
                  </SelectContent>
                </Select>
              </div>
              <div className="space-y-1.5">
                <Label htmlFor="colors">Couleurs / Contraintes</Label>
                <Input id="colors" value={colors} onChange={(e:any)=>setColors(e.target.value)} placeholder="ex: Noir, or, #111, pas de fond blanc…" />
              </div>
              <div className="space-y-1.5">
                <Label htmlFor="cta">Call to Action</Label>
                <Input id="cta" value={cta} onChange={(e:any)=>setCta(e.target.value)} placeholder="ex: Découvrir, S'inscrire, Essayer maintenant…" />
              </div>
              <div className="space-y-1.5">
                <Label htmlFor="hashtags">Hashtags</Label>
                <Input id="hashtags" value={hashtags} onChange={(e:any)=>setHashtags(e.target.value)} placeholder="ex: #AI #Marketing #Keiro" />
              </div>

              <div className="mt-2 grid grid-cols-2 gap-2">
                <Button onClick={copyPrompt}>Générer une image</Button>
                <Button variant="outline" onClick={copyPrompt}>Générer une vidéo</Button>
              </div>

              <div className="space-y-1.5">
                <Label>Prompt final</Label>
                <Textarea readOnly value={prompt} className="min-h-[120px]" />
              </div>
            </CardContent>
          </Card>
        </div>
      </aside>
    </div>
  );
}

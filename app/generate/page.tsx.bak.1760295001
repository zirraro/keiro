'use client';
import PromptAssistant from '../components/PromptAssistant';
function pickImg(it:any){
  try{
    return it?.image || it?.imageUrl || it?.urlToImage || it?.thumbnail || it?.picture_url || it?.enclosure?.url || "";
  }catch(_){ return "" }
}

import React, { useEffect, useMemo, useState } from 'react';
import { buildPrompt } from "@/app/lib/marketingPrompt";

type Item = {
  id?: string;
  url?: string;
  title?: string;
  description?: string;
  image?: string;
  source?: string;
  publishedAt?: string;
};

const CATEGORIES = [
  { slug: 'technology', label: 'IA & Tech' },
  { slug: 'business',   label: 'Business' },
  { slug: 'finance',    label: 'Finance' },
  { slug: 'sports',     label: 'Sports' },
  { slug: 'gaming',     label: 'Gaming' },
  { slug: 'culture',    label: 'Culture' },
  { slug: 'food',       label: 'Food' },
  { slug: 'lifestyle',  label: 'Lifestyle' },
  { slug: 'sante',      label: 'Santé' },
  { slug: 'auto',       label: 'Auto' },
  { slug: 'climat',     label: 'Climat' },
  { slug: 'immo',       label: 'Immo' },
  { slug: 'world',      label: 'Monde' },
];

const WINDOWS = [
  { label: '24h', value: '24h' as const },
  { label: '7 jours', value: '7d' as const },
];

function cls(...a: Array<string | false | undefined>) {
  return a.filter(Boolean).join(' ');
}

export default function GeneratePage() {
  /** Filtres */
  const [categorySlug, setCategorySlug] = useState<string>('technology');
const [selectedItem, setSelectedItem] = useState<any>(null);
  const [period, setPeriod] = useState<'24h' | '7d'>('24h');
  const [limit] = useState<number>(12);

  /** Données */
  const [items, setItems] = useState<Item[]>([]);
  const [selected, setSelected] = useState<Item | null>(null);

  /** Logo (dropzone séparée) */
  const [logoUrl, setLogoUrl] = useState<string>('');
  const onPickLogo = (f: File) => {
    const url = URL.createObjectURL(f);
    setLogoUrl(url);
  };

  /** Assistant de prompt (séparé) */
  const [brand, setBrand] = useState('');
  const [goal, setGoal] = useState('');
  const [tone, setTone] = useState('');
  const [constraints, setConstraints] = useState('');
  const [cta, setCta] = useState('');
  const [hashtags, setHashtags] = useState('');

  /** Génération (aperçu image sous le bouton) */
  const [genLoading, setGenLoading] = useState(false);
  const [genError, setGenError] = useState<string | null>(null);
  const [generatedUrl, setGeneratedUrl] = useState<string | null>(null);

  /** Chargement des news */
  useEffect(() => {
    const url = `/api/news/search?cat=${encodeURIComponent(categorySlug)}&timeframe=${encodeURIComponent(period)}&limit=${limit}`;
    fetch(url)
      .then((r) => r.json())
      .then((j) => {
        const arr = Array.isArray(j?.items) ? (j.items as Item[]) : [];
        setItems(arr);
        // garde la sélection si encore présente, sinon reset
        if (arr.length && selected?.url) {
          const still = arr.find((x) => x.url === selected.url) || null;
          setSelected(still);
        } else {
          setSelected(null);
        }
      })
      .catch(() => setItems([]));
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [categorySlug, period, limit]);

  /** Action: générer image */
  async function handleGenerate() {
    setGenLoading(true);
    setGenError(null);
    setGeneratedUrl(null);
    try {
      let resp: Response;
      if (selected) {
        // génération "from-news"
        const payload = {
          kind: 'image',
          brand: brand || undefined,
          goal: goal || undefined,
          tone: tone || undefined,
          constraints: constraints || undefined,
          hashtags: hashtags || undefined,
          // on envoie les infos de la news
          news: {
            title: selected.title || '',
            source: selected.source || '',
            url: selected.url || '',
            image: selected.image || '',
          },
          // on peut aussi envoyer un logo si tu veux le traiter côté backend plus tard
          logo: logoUrl || undefined,
        };
        resp = await fetch('/api/generate/from-news', {
          method: 'POST',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify(payload),
        });
      } else {
        // génération "image" simple
        const payload = {
          brand: brand || undefined,
          newsTitle: '(sans article sélectionné)',
          tone: tone || undefined,
          cta: cta || undefined,
          logo: logoUrl || undefined,
        };
        resp = await fetch('/api/generate/image', {
          method: 'POST',
          headers: { 'content-type': 'application/json' },
          body: JSON.stringify(payload),
        });
      }
      const data = await resp.json().catch(() => ({}));
      if (!resp.ok || data?.kind === 'error') {
        throw new Error(data?.message || `Erreur ${resp.status}`);
      }
      const url = data?.url;
      if (typeof url !== 'string') throw new Error('Réponse invalide (pas de url)');
      setGeneratedUrl(url);
    } catch (e: any) {
      setGenError(e?.message || 'Erreur inconnue');
    } finally {
      setGenLoading(false);
    }
  }

  return (
    <main className="mx-auto max-w-7xl px-4 py-6">
      {/* 2 colonnes : liste (gauche) + panneau (droite) */}
      <div className="grid grid-cols-1 lg:grid-cols-[1fr_380px] gap-6">
        {/* COLONNE GAUCHE : news cards */}
        <section>
          {/* Filtres en ligne */}
          <div className="flex flex-wrap items-center gap-3 mb-4">
            {/* Catégorie */}
            <label className="text-sm flex items-center gap-2">
              Catégorie
              <select
                className="border rounded-md px-2 py-1 text-sm"
                value={categorySlug}
                onChange={(e) => setCategorySlug(e.target.value)}
              >
                {CATEGORIES.map((c) => (
                  <option key={c.slug} value={c.slug}>
                    {c.label}
                  </option>
                ))}
              </select>
            </label>

            {/* Période */}
            <div className="flex items-center gap-2">
              {WINDOWS.map((w) => (
                <button
                  key={w.value}
                  onClick={() => setPeriod(w.value)}
                  className={cls(
                    'px-3 py-1 rounded-md text-sm border',
                    period === w.value
                      ? 'bg-black text-white border-black'
                      : 'bg-white hover:bg-neutral-100 border-neutral-300'
                  )}
                >
                  {w.label}
                </button>
              ))}
            </div>
          </div>

          {/* Grille : 3 cartes par ligne en desktop */}
          {items.length === 0 && (
            <div className="text-sm text-neutral-500 border rounded-md p-3">
              Aucune actualité pertinente.
            </div>
          )}

          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {items.map((it, i) => (
              <article
                key={(it.url || it.id || String(i))}
                className={cls(
                  'rounded-xl border border-neutral-200 bg-white overflow-hidden transition',
                  selected?.url === it.url ? 'ring-2 ring-black' : 'hover:shadow-md'
                )}
              >
                {/* IMAGE D’APERÇU — si pas fournie par l’API, bloc neutre */}
                {pickImg(it) ? (
                  <img
                    src={pickImg(it)}
                    alt={it.title || 'image'}
                    className="w-full h-[180px] object-cover"
                    loading="lazy"
                  />
                ) : (
                  <div className="w-full h-[180px] bg-neutral-100" />
                )}

                <div className="p-3">
                  <div className="flex items-center justify-between">
                    <span className="text-xs text-neutral-500">{it.source || 'Source'}</span>
                    <span className="text-[11px] text-neutral-400">
                      {it.publishedAt ? new Date(it.publishedAt).toLocaleString() : ''}
                    </span>
                  </div>

                  <h3 className="font-medium leading-snug mt-1 line-clamp-2">{it.title}</h3>

                  <div className="flex items-center gap-2 mt-2">
                    <a
                      href={it.url}
                      target="_blank"
                      rel="noreferrer"
                      className="px-2.5 py-1.5 rounded-md border border-neutral-300 text-[13px] hover:bg-neutral-50"
                    >
                      Voir la source
                    </a>
                    <button
                      onClick={() => setSelected(it)}
                      className={cls(
                        'px-2.5 py-1.5 rounded-md text-[13px]',
                        selected?.url === it.url
                          ? 'bg-black text-white'
                          : 'bg-neutral-900 text-white hover:opacity-90'
                      )}
                    >
                      Utiliser cette actu
                    </button>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>

        {/* COLONNE DROITE : Logo (séparé) + Assistant + Aperçu image générée */}
        <aside className="lg:sticky lg:top-20 h-fit">
  <PromptAssistant selected={typeof selected !== 'undefined' ? selected : undefined} />

<div className="mt-4 rounded-2xl border border-neutral-200 p-4 bg-white">
  <div className="flex items-center justify-between mb-3">
    <h4 className="font-medium">Génération basée sur l’actualité</h4>
  </div>
  <button
    id="gen-image-btn"
    onClick={handleGenerate}
    disabled={!selected}
    className={"w-full px-3 py-2 rounded-md text-sm " + (!selected ? "bg-neutral-200 text-neutral-500 cursor-not-allowed" : "bg-black text-white hover:opacity-90")}
  >{selected ? "Générer l’image à partir de l’actu sélectionnée" : "Sélectionnez d’abord une actu"}</button>

  {generatedUrl && (
    <div className="mt-3">
      <div className="text-xs text-neutral-500 mb-2">Aperçu généré</div>
      <img src={generatedUrl} alt="Aperçu généré" className="w-full h-[220px] object-cover rounded-md border border-neutral-200 bg-neutral-100" />
    </div>
  )}
</div>
</aside>
      </div>
    </main>
  );
}

import { NextResponse } from "next/server";
import { createJob, setJobStatus } from "@/lib/job-store";
import { generateImageDataUrlFromNews } from "@/lib/openai-image";

export const runtime = "nodejs";

export async function POST(req: Request) {
  try {
    const body = await req.json();
  if (body.article && !body.news) body.news = body.article; // compat ancien client
    const kind = body?.kind === "video" ? "video" : "image";
    const news = body?.news || {};
    if (!news?.title) {
    }

    const job = createJob(kind, { topic: news.topic || "news" });

    // lance en tâche de fond
    (async () => {
      try {
        setJobStatus(job.id, "running");
        if (kind === "image") {
          const dataUrl = await generateImageDataUrlFromNews({
            title: news.title,
            summary: news.summary,
            topic: news.topic,
          });
          setJobStatus(job.id, "done", { resultUrl: dataUrl });
        } else {
          // Pour la vidéo, brancher ton pipeline réel ici.
          // Pour l'instant on met un lien exemple (remplace quand prêt).
          setJobStatus(job.id, "done", {
            resultUrl: "https://interactive-examples.mdn.mozilla.net/media/cc0-videos/flower.mp4",
          });
        }
      } catch (e: any) {
        setJobStatus(job.id, "error", { error: String(e?.message || e) });
      }
    })();

    return NextResponse.json({ jobId: job.id }, { status: 202 });
  } catch (e: any) {
    return NextResponse.json({ error: String(e?.message || e) }, { status: 500 });
  }
}
